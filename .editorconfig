# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

# 4 space indentation
[*.{java,py,php,h,cc}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
